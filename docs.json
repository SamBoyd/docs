{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "OpenBacklog",
  "colors": {
    "primary": "#6B9797",
    "light": "#7FAAAA",
    "dark": "#557878"
  },
  "favicon": "/favicon.ico",
  "logo": {
    "light": "/logo/ob_v2_64x64.png",
    "dark": "/logo/ob_v2_64x64.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "MCP Integration",
            "pages": [
              "mcp-integration/claude-code",
              "mcp-integration/cursor"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/strategic-planning",
              "features/tasks-initiatives"
            ]
          },
          {
            "group": "Self-Hosting",
            "pages": [
              "self-hosting/docker-compose"
            ]
          },
          {
            "group": "API",
            "pages": [
              "api/reference"
            ]
          },
          {
            "group": "Support",
            "pages": ["support"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/samboyd/openbacklog",
          "icon": "github"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/samboyd/openbacklog"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/quickstart"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "claude",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/samboyd/openbacklog"
    }
  }
}
